.container {
  min-height: 100vh;
  background: #000;
  display: flex;
  flex-direction: column;
}

/* Image Viewer */
.image-viewer {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.full-image {
  width: 100%;
  max-height: 80vh;
  border-radius: 16rpx;
}

/* Navigation Arrows - Êõ¥ÂèØÁà± */
.nav-arrows {
  position: fixed;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
  pointer-events: none;
  z-index: 10;
}

.nav-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 251, 240, 0.95) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  color: #C59D5F;
  pointer-events: auto;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  font-weight: 600;
}

.nav-btn:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.nav-btn.disabled {
  opacity: 0.3;
  pointer-events: none;
}

/* Photo Info Panel - Êõ¥Á≤æËá¥ */
.photo-info-panel {
  background: linear-gradient(180deg, #FFFFFF 0%, #FFFBF0 100%);
  border-radius: 40rpx 40rpx 0 0;
  padding: 36rpx 32rpx 24rpx;
  position: relative;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.photo-info-panel::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #E0E0E0;
  border-radius: 3rpx;
}

.info-row {
  display: flex;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(197, 157, 95, 0.05);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row:active {
  background: rgba(197, 157, 95, 0.1);
}

.info-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #C59D5F;
  font-weight: 700;
  display: flex;
  align-items: center;
}

.info-label::before {
  content: '‚Ä¢';
  margin-right: 8rpx;
  font-size: 32rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #5C4033;
  line-height: 1.6;
}

/* Action Buttons - Êõ¥ÂèØÁà± */
.action-buttons {
  background: linear-gradient(180deg, #FFFBF0 0%, #FFFFFF 100%);
  padding: 0 32rpx 40rpx;
}

.btn-delete {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF8BA7 0%, #FF6B8A 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(255, 139, 167, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

