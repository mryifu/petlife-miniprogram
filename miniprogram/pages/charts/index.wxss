/** charts/index.wxss **/

/* Tab Bar */
.tab-bar {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: var(--radius-md);
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s;
}

.tab-item.active {
  background: var(--primary-color);
  color: var(--text-main);
  font-weight: bold;
}

/* Cards */
.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

/* Weight Section */
.add-weight-card {
  margin-bottom: 20rpx;
}

.weight-date {
  color: var(--text-placeholder);
  font-size: 24rpx;
}

.weight-input-row {
  margin-top: 20rpx;
  gap: 20rpx;
}

.weight-input {
  flex: 1;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: var(--radius-sm);
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.weight-unit {
  font-size: 28rpx;
  color: var(--text-secondary);
  align-self: center;
}

.btn-small {
  background: var(--primary-color);
  color: var(--text-main);
  font-size: 26rpx;
  padding: 16rpx 40rpx;
  border-radius: var(--radius-round);
  font-weight: bold;
}

/* Chart */
.chart-card {
  margin-bottom: 20rpx;
}

.chart-container {
  width: 100%;
  height: 400rpx;
  margin: 20rpx 0;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

.chart-summary {
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.summary-item {
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: var(--text-placeholder);
  display: block;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

/* History */
.history-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.history-item:last-child {
  border-bottom: none;
}

.history-date {
  color: var(--text-secondary);
  font-size: 26rpx;
}

.history-value {
  font-weight: bold;
  font-size: 28rpx;
}

/* Expense Section */
.expense-summary {
  background: linear-gradient(135deg, var(--primary-color) 0%, #FFD966 100%);
  margin-bottom: 20rpx;
}

.month-picker {
  font-size: 24rpx;
  color: rgba(0,0,0,0.6);
}

.total-amount {
  font-size: 56rpx;
  font-weight: bold;
  margin-top: 20rpx;
  display: block;
}

/* Legend */
.legend-list {
  margin-top: 20rpx;
}

.legend-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  gap: 16rpx;
}

.legend-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.legend-name {
  flex: 1;
  font-size: 26rpx;
}

.legend-amount {
  font-size: 26rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.legend-percent {
  font-size: 24rpx;
  color: var(--text-placeholder);
  width: 80rpx;
  text-align: right;
}

/* Expense Form */
.expense-form {
  margin-top: 20rpx;
}

.form-row {
  margin-bottom: 20rpx;
  gap: 20rpx;
  align-items: center;
}

.form-label {
  width: 100rpx;
  font-size: 28rpx;
}

.form-input {
  flex: 1;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: var(--radius-sm);
  font-size: 28rpx;
}

.form-picker {
  flex: 1;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: var(--radius-sm);
  font-size: 28rpx;
}

/* Expense List */
.expense-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.expense-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.expense-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.expense-type-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
}

.expense-note {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.expense-right {
  text-align: right;
}

.expense-amount {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--danger);
  display: block;
}

.expense-date {
  font-size: 22rpx;
  color: var(--text-placeholder);
}
