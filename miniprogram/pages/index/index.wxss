/* pages/index/index.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 200rpx;
}

/* 顶部宠物卡片 */
.pet-card {
  position: relative;
  background: linear-gradient(135deg, #FFF 0%, #FFFBF0 100%);
  padding: 30rpx 40rpx; 
  overflow: hidden;
  border: 4rpx solid var(--white);
  border-radius: 40rpx; 
}

.pet-info {
  position: relative;
  z-index: 1;
}

.pet-avatar-wrapper {
  position: relative;
  margin-right: 32rpx;
}

.pet-avatar {
  width: 120rpx;
  height: 120rpx;
  background: var(--bg-warm);
  border-radius: 50%;
  border: 6rpx solid var(--white);
  box-shadow: 0 8rpx 16rpx rgba(197, 157, 95, 0.15);
}

.gender-icon {
  position: absolute;
  right: -6rpx;
  bottom: 0;
  width: 40rpx;
  height: 40rpx;
  background: var(--white);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.pet-basic {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.pet-header {
  margin-bottom: 8rpx;
  align-items: center;
}

.pet-name {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-right: 16rpx;
  white-space: nowrap;
}

.pet-status {
  padding: 2rpx 12rpx;
  background: #E6D5B8;
  color: var(--text-main);
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  white-space: nowrap;
  flex-shrink: 0;
}

.pet-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.switch-btn {
  width: 60rpx;
  height: 60rpx;
  background: var(--bg-warm);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  color: var(--primary-color);
}

/* 时间轴 */
.timeline {
  margin-top: 40rpx; /* 增加顶部间距 */
}

.timeline-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 30rpx;
  padding-left: 10rpx;
  position: relative;
}

.timeline-list {
  position: relative;
  padding-left: 30rpx; 
}

.timeline-line {
  position: absolute;
  left: 14rpx;
  top: 24rpx;
  bottom: 24rpx;
  width: 2rpx; 
  background: #E0D0C0; 
  border-radius: 2rpx;
}

.log-item {
  position: relative;
  margin-bottom: 30rpx; 
  padding-left: 30rpx;
}

.log-dot {
  position: absolute;
  left: -24rpx;
  top: 28rpx;
  width: 12rpx;
  height: 12rpx;
  background: var(--white);
  border: 4rpx solid var(--primary-color);
  border-radius: 50%;
  z-index: 2;
  box-shadow: 0 0 0 4rpx var(--bg-color); 
}

.log-card {
  background: var(--white);
  padding: 24rpx 30rpx;
  border-radius: 24rpx; 
  box-shadow: var(--card-shadow);
  border: 2rpx solid rgba(255,255,255,0.5);
}

.log-header {
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.log-time {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 700;
  font-family: 'DIN', sans-serif;
  margin-right: 16rpx;
}

.log-tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.log-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.log-images {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.log-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  object-fit: cover;
  background: var(--bg-warm);
}

/* FAB */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx; /* 首页底部导航栏比较高 */
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(197, 157, 95, 0.4);
  z-index: 90;
  transition: all 0.3s;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.fab:active {
  transform: scale(0.95);
  animation: none;
}

.fab-icon {
  font-size: 60rpx;
  color: var(--white);
  font-weight: 300;
}


/* 底部动作面板 (Bottom Sheet) */
.action-sheet-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.action-sheet-mask.show {
  visibility: visible;
  opacity: 1;
}

.action-sheet {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: var(--bg-color);
  border-radius: 40rpx 40rpx 0 0;
  z-index: 101;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.action-sheet-mask.show .action-sheet {
  transform: translateY(0);
}

.sheet-header {
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid var(--border-color);
  background: var(--white);
  border-radius: 40rpx 40rpx 0 0;
}

.sheet-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
}

.sheet-close {
  font-size: 40rpx;
  color: var(--text-placeholder);
  padding: 10rpx;
}

/* 步骤容器 */
.step-container {
  overflow: hidden;
  /* flex: 1; */
}

/* 步骤1：类型选择 */
.step-content {
  padding: 40rpx;
  transition: all 0.3s ease;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.type-icon-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 40rpx;
  background: var(--white);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

.type-item:active .type-icon-box {
  transform: scale(0.95);
  background: var(--bg-warm);
}

.type-name {
  font-size: 26rpx;
  color: var(--text-main);
}

/* 步骤2：表单 */
.form-content {
  padding: 30rpx 40rpx;
}

.form-group {
  margin-bottom: 24rpx;
  background: var(--white);
  padding: 24rpx 30rpx;
  border-radius: 24rpx;
}

.label {
  color: var(--text-secondary);
  font-size: 24rpx;
  margin-bottom: 12rpx;
  display: block;
}

.input, .picker {
  font-size: 32rpx;
  color: var(--text-main);
  width: 100%;
}

.img-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.img-item {
  width: 140rpx;
  height: 140rpx;
  position: relative;
}

.img-item image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.img-del {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: var(--danger);
  color: #fff;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 24rpx;
}

.img-add {
  width: 140rpx;
  height: 140rpx;
  background: var(--bg-warm);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: var(--text-placeholder);
  font-weight: 300;
}

.btn-primary {
  background: var(--primary-color);
  color: var(--white);
  border-radius: 99rpx;
  box-shadow: 0 10rpx 20rpx rgba(197, 157, 95, 0.3);
  margin-top: 20rpx;
}

.btn-primary.disabled {
  opacity: 0.6;
}

/* 空状态 */
.empty-timeline {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  opacity: 0.6;
}

.empty-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

/* 历史足迹 */
.history-section {
  margin-top: 32rpx;
  padding-bottom: 120rpx;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
}

.history-subtitle {
  font-size: 24rpx;
  color: var(--text-placeholder);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: var(--white);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-date {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.history-logs {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-log {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 12rpx;
  background: var(--bg-color);
  border-radius: 16rpx;
}

.history-emoji {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.history-type {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

.history-time {
  font-size: 24rpx;
  color: var(--text-placeholder);
}
