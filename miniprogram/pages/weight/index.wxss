/* pages/weight/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFFBF0 0%, #FFF8E7 100%);
  padding: 24rpx;
  padding-bottom: 40rpx;
}

/* 宠物信息卡片 */
.pet-header-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8F0 100%);
  border-radius: 28rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.12);
  animation: slideDown 0.5s ease;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.pet-avatar-mini {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  border: 3rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(197, 157, 95, 0.2);
}

.pet-info-mini {
  flex: 1;
}

.pet-name-mini {
  font-size: 32rpx;
  font-weight: 700;
  color: #5C4033;
  display: block;
  margin-bottom: 4rpx;
}

.pet-species-mini {
  font-size: 24rpx;
  color: #C59D5F;
  font-weight: 600;
}

/* 关键指标卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 100%);
  border-radius: 24rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.12);
  position: relative;
  overflow: hidden;
  animation: fadeIn 0.5s ease;
  animation-fill-mode: both;
}

.stat-card:nth-child(1) { animation-delay: 0.1s; }
.stat-card:nth-child(2) { animation-delay: 0.2s; }
.stat-card:nth-child(3) { animation-delay: 0.3s; }

@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #C59D5F 0%, #D4A574 100%);
}

.stat-card.current::before {
  background: linear-gradient(90deg, #5AC8FA 0%, #007AFF 100%);
}

.stat-card.target::before {
  background: linear-gradient(90deg, #FFB84D 0%, #FF9500 100%);
}

.stat-card.change.up::before {
  background: linear-gradient(90deg, #FF8BA7 0%, #FF6B8A 100%);
}

.stat-card.change.down::before {
  background: linear-gradient(90deg, #95D1CC 0%, #34C759 100%);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #5C4033;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #8D7B68;
  font-weight: 600;
}

.stat-action {
  font-size: 20rpx;
  color: #FFB84D;
  margin-top: 4rpx;
  font-weight: 700;
}

.stat-percent {
  font-size: 20rpx;
  color: #C59D5F;
  margin-top: 4rpx;
  font-weight: 700;
}

.stat-card.change.up .stat-percent {
  color: #FF8BA7;
}

.stat-card.change.down .stat-percent {
  color: #95D1CC;
}

/* 图表卡片 */
.chart-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 100%);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.12);
  animation: fadeIn 0.5s ease 0.4s both;
}

.card-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #5C4033;
}

.title-count {
  font-size: 24rpx;
  color: #C59D5F;
  background: rgba(197, 157, 95, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.chart-container {
  height: 400rpx;
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

.simple-chart {
  width: 100%;
  height: 100%;
  position: relative;
  background: linear-gradient(180deg, rgba(197, 157, 95, 0.02) 0%, rgba(197, 157, 95, 0.05) 100%);
  border-radius: 16rpx;
  padding: 20rpx;
}

.chart-line {
  position: absolute;
  bottom: 50%;
  left: 20rpx;
  right: 20rpx;
  height: 2rpx;
  background: rgba(197, 157, 95, 0.2);
}

.chart-point {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  border-radius: 50%;
  border: 3rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(197, 157, 95, 0.3);
  transform: translate(-50%, 50%);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: translate(-50%, 50%) scale(1); }
  50% { transform: translate(-50%, 50%) scale(1.2); }
}

/* 记录列表 */
.records-section {
  animation: fadeIn 0.5s ease 0.5s both;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #5C4033;
}

.add-btn-small {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(197, 157, 95, 0.3);
  transition: all 0.3s ease;
}

.add-btn-small:active {
  transform: scale(0.95);
}

.add-icon-small {
  font-size: 32rpx;
  font-weight: 300;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #5C4033;
  display: block;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #BCAAA4;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(197, 157, 95, 0.08);
  transition: all 0.3s ease;
  animation: slideIn 0.5s ease;
}

@keyframes slideIn {
  from { opacity: 0; transform: translateX(-20rpx); }
  to { opacity: 1; transform: translateX(0); }
}

.record-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(197, 157, 95, 0.12);
}

.record-date {
  width: 140rpx;
  flex-shrink: 0;
  padding-right: 20rpx;
  border-right: 2rpx solid rgba(197, 157, 95, 0.1);
}

.date-day {
  font-size: 28rpx;
  font-weight: 700;
  color: #5C4033;
  display: block;
  margin-bottom: 6rpx;
}

.date-time {
  font-size: 22rpx;
  color: #BCAAA4;
}

.record-content {
  flex: 1;
}

.record-weight {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.weight-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #C59D5F;
  font-family: 'DIN', sans-serif;
}

.weight-unit {
  font-size: 24rpx;
  color: #8D7B68;
  font-weight: 600;
}

.record-note {
  font-size: 26rpx;
  color: #8D7B68;
  line-height: 1.5;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
  align-items: center;
  justify-content: center;
}

.modal.show {
  display: flex;
  animation: fadeInBg 0.3s ease;
}

@keyframes fadeInBg {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  width: 85%;
  max-height: 80vh;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 100%);
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideUp 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  padding: 36rpx 32rpx 24rpx;
  border-bottom: 2rpx solid rgba(197, 157, 95, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5C4033;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(197, 157, 95, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #C59D5F;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(197, 157, 95, 0.2);
  transform: scale(0.95);
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 0 32rpx 40rpx;
}

/* 表单 */
.form-group {
  margin-bottom: 28rpx;
}

.label {
  font-size: 28rpx;
  color: #5C4033;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  font-weight: 700;
}

.label::before {
  content: '✨';
  margin-right: 8rpx;
  font-size: 24rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #F0E6D2;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #5C4033;
  background: linear-gradient(135deg, #FFFBF0 0%, #FFF8E7 100%);
}

.large-input {
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  color: #C59D5F;
}

.picker {
  padding: 24rpx;
  border: 2rpx solid #F0E6D2;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #5C4033;
  background: linear-gradient(135deg, #FFFBF0 0%, #FFF8E7 100%);
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 2rpx solid #F0E6D2;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #5C4033;
  background: linear-gradient(135deg, #FFFBF0 0%, #FFF8E7 100%);
  line-height: 1.6;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(197, 157, 95, 0.3);
}

/* 目标设置特殊样式 */
.target-tips {
  background: linear-gradient(135deg, rgba(255, 184, 77, 0.1) 0%, rgba(255, 149, 0, 0.05) 100%);
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 28rpx;
  border: 2rpx solid rgba(255, 184, 77, 0.2);
}

.tip-icon {
  font-size: 32rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #8D7B68;
  line-height: 1.5;
}

.target-diff {
  text-align: center;
  padding: 20rpx;
  background: rgba(197, 157, 95, 0.05);
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.diff-label {
  font-size: 24rpx;
  color: #8D7B68;
  margin-right: 12rpx;
}

.diff-value {
  font-size: 32rpx;
  font-weight: 700;
}

.diff-value.up {
  color: #FF8BA7;
}

.diff-value.down {
  color: #95D1CC;
}
