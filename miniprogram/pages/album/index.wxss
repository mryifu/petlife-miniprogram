/* pages/album/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFFBF0 0%, #FFF8E7 100%);
  padding-bottom: 140rpx;
}

/* Pet Selector - Êõ¥ÂèØÁà±ÁöÑËÆæËÆ° */
.pet-selector {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8F0 100%);
  padding: 28rpx 32rpx;
  margin: 24rpx 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(197, 157, 95, 0.15);
  border: 2rpx solid rgba(197, 157, 95, 0.1);
  position: relative;
  overflow: hidden;
}

.pet-selector::before {
  content: 'üêæ';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 80rpx;
  opacity: 0.05;
}

.picker-view {
  align-items: center;
  position: relative;
  z-index: 1;
}

.pet-avatar-small {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(197, 157, 95, 0.2);
}

.pet-name {
  flex: 1;
  font-size: 34rpx;
  font-weight: 700;
  color: #5C4033;
  letter-spacing: 1rpx;
}

.picker-arrow {
  font-size: 28rpx;
  color: #C59D5F;
  font-weight: 600;
}

/* Empty State - Êõ¥ÁîüÂä® */
.empty-state {
  padding: 200rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 32rpx;
  display: block;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-12rpx) rotate(5deg); }
}

.empty-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #5C4033;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #BCAAA4;
  line-height: 1.6;
}

/* Timeline - Êõ¥Á≤æËá¥ */
.timeline {
  padding: 0 32rpx;
}

.date-group {
  margin-bottom: 56rpx;
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.date-header {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.date-header::before {
  content: 'üìÖ';
  margin-right: 12rpx;
  font-size: 32rpx;
}

.date-label {
  font-size: 30rpx;
  font-weight: 700;
  color: #A67C52;
  letter-spacing: 1rpx;
}

/* Photo Grid - Êõ¥ÂèØÁà±ÁöÑÂç°Áâá */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.photo-card {
  background: white;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.12);
  transition: all 0.3s ease;
  position: relative;
}

.photo-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, transparent 60%, rgba(0,0,0,0.3) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 1;
  pointer-events: none;
}

.photo-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(197, 157, 95, 0.15);
}

.photo-card:active::before {
  opacity: 1;
}

.photo-image {
  width: 100%;
  height: 340rpx;
  display: block;
}

.photo-info {
  padding: 20rpx;
  background: linear-gradient(180deg, #FFFFFF 0%, #FFFBF0 100%);
}

.photo-time {
  font-size: 24rpx;
  color: #C59D5F;
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.photo-time::before {
  content: 'üïê';
  margin-right: 6rpx;
  font-size: 20rpx;
}

.photo-desc {
  font-size: 28rpx;
  color: #5C4033;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.5;
}

/* FAB Button - Êõ¥ÁîüÂä® */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  box-shadow: 0 12rpx 40rpx rgba(197, 157, 95, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: all 0.3s ease;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.4);
}

.fab-icon {
  font-size: 72rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
}

/* Bottom Sheet - Êõ¥Á≤æËá¥ */
.bottom-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
  animation: fadeInBg 0.3s ease;
}

@keyframes fadeInBg {
  from { opacity: 0; }
  to { opacity: 1; }
}

.bottom-sheet.show {
  display: block;
}

.sheet-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.sheet-header {
  padding: 36rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.sheet-header::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #E0E0E0;
  border-radius: 3rpx;
}

.sheet-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #5C4033;
  display: flex;
  align-items: center;
}

.sheet-title::before {
  content: 'üì∏';
  margin-right: 12rpx;
  font-size: 36rpx;
}

.sheet-close {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  line-height: 1;
  transition: all 0.3s ease;
}

.sheet-close:active {
  background: #E0E0E0;
  transform: scale(0.95);
}

.sheet-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

.sheet-footer {
  padding: 24rpx 32rpx 40rpx;
  border-top: 1rpx solid #F5F5F5;
  background: linear-gradient(180deg, #FFFFFF 0%, #FFFBF0 100%);
}

/* Form - Êõ¥ÂèØÁà± */
.form-group {
  margin-bottom: 32rpx;
}

.label {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #5C4033;
  margin-bottom: 16rpx;
  font-weight: 700;
}

.label::before {
  content: '‚ú®';
  margin-right: 8rpx;
  font-size: 24rpx;
}

.image-picker {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 20rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF8BA7 0%, #FF6B8A 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 139, 167, 0.4);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.9);
}

.add-image-btn {
  aspect-ratio: 1;
  border: 3rpx dashed #C59D5F;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFFBF0 0%, #FFF8E7 100%);
  transition: all 0.3s ease;
}

.add-image-btn:active {
  transform: scale(0.95);
  background: #FFF8E7;
}

.add-icon {
  font-size: 64rpx;
  color: #C59D5F;
  font-weight: 300;
  margin-bottom: 8rpx;
}

.textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 24rpx;
  border: 2rpx solid #F0E6D2;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #5C4033;
  background: linear-gradient(135deg, #FFFBF0 0%, #FFF8E7 100%);
  line-height: 1.6;
  transition: all 0.3s ease;
}

.textarea:focus {
  border-color: #C59D5F;
  background: #FFFBF0;
}

.picker {
  padding: 24rpx;
  border: 2rpx solid #F0E6D2;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #5C4033;
  background: linear-gradient(135deg, #FFFBF0 0%, #FFF8E7 100%);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker::after {
  content: '‚ñº';
  font-size: 20rpx;
  color: #C59D5F;
  margin-left: 12rpx;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(197, 157, 95, 0.3);
}

