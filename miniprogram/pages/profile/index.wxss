/* pages/profile/index.wxss */
.container {
  padding: 30rpx;
  background: linear-gradient(180deg, #FFFBF0 0%, #FFF8E7 100%);
  min-height: 100vh;
}

/* User Card - Êõ¥ÂèØÁà± */
.user-card {
  padding: 48rpx 40rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8F0 100%);
  border-radius: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(197, 157, 95, 0.15);
  border: 2rpx solid rgba(197, 157, 95, 0.1);
  position: relative;
  overflow: hidden;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.user-card::before {
  content: 'üë§';
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 100rpx;
  opacity: 0.03;
}

.user-avatar {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  margin-right: 32rpx;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.25);
  transition: all 0.3s ease;
}

.user-avatar:active {
  transform: scale(0.95);
}

.user-name {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.user-pets {
  font-size: 24rpx;
  color: #C59D5F;
  background: linear-gradient(135deg, rgba(197, 157, 95, 0.15) 0%, rgba(197, 157, 95, 0.08) 100%);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.edit-icon {
  font-size: 36rpx;
  margin-left: auto;
  opacity: 0.6;
}

.user-pets::before {
  content: 'üêæ ';
  margin-right: 4rpx;
}

/* Stats Card - Êõ¥ÁîüÂä® */
.stats-card {
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  color: var(--white);
  box-shadow: 0 12rpx 40rpx rgba(197, 157, 95, 0.4);
  border-radius: 40rpx;
  padding: 40rpx 32rpx;
  position: relative;
  overflow: hidden;
  animation: fadeIn 0.6s ease;
}

.stats-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.stats-row {
  position: relative;
  z-index: 1;
}

.stat-item {
  flex: 1;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  font-family: 'DIN', sans-serif;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.95;
  letter-spacing: 1rpx;
}

/* Section Common - Êõ¥Á≤æËá¥ */
.section {
  margin-bottom: 40rpx;
  animation: fadeIn 0.7s ease;
}

.section-header {
  margin-bottom: 20rpx;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
}

.section-header::before {
  content: '‚ú®';
  margin-right: 12rpx;
  font-size: 28rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-main);
  letter-spacing: 1rpx;
}

.section-action {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 700;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(197, 157, 95, 0.3);
  transition: all 0.3s ease;
}

.section-action:active {
  transform: scale(0.95);
}

/* Reminder Card - Êõ¥ÂèØÁà± */
.reminder-card {
  padding: 32rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 100%);
  border-left: 6rpx solid #C59D5F;
  transition: all 0.3s ease;
}

.reminder-card:active {
  transform: translateX(4rpx);
  border-left-color: #A67C52;
}

.reminder-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.reminder-title::before {
  content: '‚è∞';
  margin-right: 10rpx;
  font-size: 28rpx;
}

.reminder-time {
  font-size: 26rpx;
  color: var(--text-secondary);
  padding-left: 38rpx;
}

/* Menu Card - Êõ¥ÁîüÂä® */
.menu-card {
  padding: 0;
  overflow: hidden;
  border-radius: 40rpx;
}

.menu-item {
  padding: 40rpx;
  border-bottom: 1px solid rgba(197, 157, 95, 0.08);
  font-size: 32rpx;
  color: var(--text-main);
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  background: linear-gradient(90deg, transparent 0%, rgba(197, 157, 95, 0.02) 100%);
}

.menu-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #D4A574 0%, #C59D5F 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.menu-item:active {
  background: linear-gradient(90deg, rgba(197, 157, 95, 0.05) 0%, rgba(197, 157, 95, 0.08) 100%);
}

.menu-item:active::before {
  opacity: 1;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-arrow {
  color: #C59D5F;
  font-size: 36rpx;
  font-weight: 700;
}

/* Version - Êõ¥ÂèØÁà± */
.version-info {
  margin-top: 60rpx;
  font-size: 24rpx;
  color: var(--text-placeholder);
  text-align: center;
  padding: 20rpx;
  background: rgba(197, 157, 95, 0.05);
  border-radius: 24rpx;
}

.version-info::before {
  content: 'üêæ ';
  margin-right: 8rpx;
}

/* Empty State - Êõ¥ÁîüÂä® */
.empty-state {
  padding: 60rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  display: block;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* Modal Styles - Êõ¥Á≤æËá¥ */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  width: 85%;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFBF0 100%);
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideUp 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  padding: 36rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8F0 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid rgba(197, 157, 95, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-main);
  display: flex;
  align-items: center;
}

.modal-title::before {
  content: '‚ú®';
  margin-right: 12rpx;
  font-size: 32rpx;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(197, 157, 95, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #C59D5F;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(197, 157, 95, 0.2);
  transform: scale(0.95);
}

.modal-body {
  padding: 32rpx;
}

.modal-footer {
  padding: 0 32rpx 40rpx;
}

.form-group {
  background: rgba(255, 255, 255, 0.8);
  padding: 28rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(197, 157, 95, 0.1);
}

.label {
  font-size: 26rpx;
  color: #C59D5F;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  font-weight: 700;
}

.label::before {
  content: '‚Ä¢';
  margin-right: 8rpx;
  font-size: 32rpx;
}

.picker {
  font-size: 30rpx;
  color: var(--text-main);
  padding: 8rpx 0;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #D4A574 0%, #C59D5F 100%);
  color: var(--white);
  border-radius: 48rpx;
  font-size: 34rpx;
  padding: 24rpx 0;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(197, 157, 95, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(197, 157, 95, 0.3);
}

